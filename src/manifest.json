{
    "name": "Preview for Designer News",
    "version": "1.1",
    "manifest_version": 2,
    "author": "Armand Grillet",
    "description": "An extension to see what will look like your new comment on DN",
    "homepage_url": "https://github.com/ArmandGrillet/Preview-for-Designer-News",
    "permissions": [
        "https://news.layervault.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://news.layervault.com/submit",
                "https://news.layervault.com/stories/*",
                "https://news.layervault.com/comments/*"
            ],
            "js": [
                "js/lib/marked.min.js",
                "js/preview.js"
            ]
        },
        {
            "matches": [
                "https://news.layervault.com/comments/*"
            ],
            "js": [
                "js/preview-comment.js"
            ]
        },
        {
            "matches": [
                "https://news.layervault.com/stories/*"
            ],
            "js": [
                "js/preview-story.js"
            ]
        },
        {
            "matches": [
                "https://news.layervault.com/submit"
            ],
            "js": [
                "js/preview-submit.js"
            ]
        } 
    ]
}